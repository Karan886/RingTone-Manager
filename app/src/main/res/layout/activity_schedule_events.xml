<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ksachdev.myringtonemanager.ScheduleEventsActivity">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:id="@+id/EventTitle"
        android:hint="Title Of Your Event"/>

    <EditText
        android:id="@+id/description_field"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:hint="Description"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDate_title"
        android:text="Start Date/Time"
        android:layout_marginLeft="5dp"
        android:textColor="#232933"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/startDate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_my_calendar" />

        <TextView
            android:id="@+id/startDate_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="April 1st 2018"
            android:textSize="15dp"
            android:layout_weight="0.77" />

        <Button
            android:id="@+id/StartTime_Button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="8:30 am" />

        <CheckBox
            android:id="@+id/notify_start_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="Notify Me"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endDate_title"
        android:text="End Date/Time"
        android:layout_marginLeft="5dp"
        android:textColor="#232933"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EndDate_icon"
            android:src="@android:drawable/ic_menu_my_calendar"/>

        <TextView
            android:id="@+id/EndDate_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="April 1st 2018" />

        <Button
            android:id="@+id/EndTime_Button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="9:30 am" />

        <CheckBox
            android:id="@+id/notify_end_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="Notify Me"
            android:textSize="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="72dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:background="#333a5e"
        android:text="Save"
        android:textColor="#dadbe5"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>

</LinearLayout>

</android.support.constraint.ConstraintLayout>
